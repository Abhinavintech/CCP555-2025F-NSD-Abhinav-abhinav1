# Fragments microservice environment example
# Do NOT store secrets here. Copy to `.env` locally and set real values.

# Storage backend: 'local' (default) or 's3'
STORAGE_BACKEND=local

# If using S3 backend:
FRAGMENTS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Htpasswd path for HTTP Basic auth (production)
HTPASSWD_FILE=tests/.htpasswd

# Cognito (if using Cognito strategy)
AWS_COGNITO_POOL_ID=
AWS_COGNITO_CLIENT_ID=

# Logging level: info, debug, warn, error, silent
LOG_LEVEL=info
